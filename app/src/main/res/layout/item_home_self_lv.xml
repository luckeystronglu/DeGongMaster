<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_self_lv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/vertical_50"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/horizontal_20"
        android:text="生产管理"
        android:drawableLeft="@drawable/icon_home_lv"
        android:drawablePadding="@dimen/horizontal_2"
        android:textSize="@dimen/font_18sp"
        />
    <view
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/text_dark_gray"/>

    <com.customview.view.SelfGridView
        android:numColumns="3"
        android:id="@+id/self_gv_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>