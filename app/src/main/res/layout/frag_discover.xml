<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.customview.selfheader.HeaderRightTextView
        android:id="@+id/header_frag_discover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vertical_70"
        android:background="@drawable/shape_bg_themefill"
        app:h2leftIconVisible="gone"
        app:rightText="发现页右键" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_50"
        android:text="登陆"
        />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/vertical_20"
        android:text="取消登陆"
        />
