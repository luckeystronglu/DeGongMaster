<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/plan_des_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <LinearLayout
        android:layout_width="@dimen/horizontal_80"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_item_home_gv"
            android:layout_width="@dimen/horizontal_60"
            android:layout_height="@dimen/horizontal_60"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_item_home_gv"
            android:text="工单生成"
            android:textColor="#615f5f"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>